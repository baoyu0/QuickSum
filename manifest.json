{
  "manifest_version": 2,
  "name": "QuickSum",
  "version": "1.0",
  "description": "快速总结网页内容的Microsoft Edge插件",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://api.openai.com/",
    "https://generativelanguage.googleapis.com/"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "lib/images/icon.svg"
  },
  "icons": {
    "32": "lib/images/icon.svg"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}