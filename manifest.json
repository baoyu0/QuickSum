{
  "manifest_version": 3,
  "name": "Website Summary",
  "version": "1.0",
  "description": "显示网站摘要",
  "permissions": ["activeTab"],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}